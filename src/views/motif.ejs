<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tenun Lombok Timur</title>
    <link rel="icon" href="/img/pavicon.png" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <!-- link css custom -->
    <link rel="stylesheet" href="/css/navbar.css" />
    <link rel="stylesheet" href="/css/motif.css" />
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-md navbar-dark bg-custom-navbar">
      <div class="container">
        <a class="navbar-brand fw-bold" href="/">TENUN LOMBOK TIMUR</a>

        <!-- Tombol Hamburger -->
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <div
          class="collapse navbar-collapse justify-content-end"
          id="navbarNav"
        >
          <ul class="navbar-nav align-items-center">
            <li class="nav-item">
              <a class="nav-link text-white" href="/">HOME</a>
            </li>
            <li class="nav-item">
              <a href="/gis" class="nav-link text-white">LOKASI</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white active" href="/motif">MOTIF</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Section Daftar Motif -->
    <div class="container pt-5 my-5">
      <h2 class="text-center mb-4 text-uppercase">
        üå∏ Macam-Macam Motif Kain Tenun üå∏
      </h2>
      <% if (data && data.length > 0) { %> <% data.forEach((item, index) => { %>
      <div class="col-12 mb-4">
        <div
          class="card card-motif shadow-sm border border-2 border-primary rounded-3"
        >
          <div class="row g-0 align-items-center">
            <!-- Gambar -->
            <div class="col-md-4">
              <img
                src="http://localhost:3000/<%= item.gambar.replace(/^(\/)?/, '') %>"
                onerror="this.src='https://placehold.co/350x200?text=No+Image'"
                class="img-fluid rounded-start"
                alt="gambar <%= item.nama %>"
                style="height: 220px; object-fit: cover; width: 100%"
              />
            </div>
            <!-- Konten -->
            <div class="col-md-8">
              <div class="card-body">
                <h6 class="text-muted">Motif <%= index + 1 %></h6>
                <h5 class="fw-bold mb-2"><%= item.nama %></h5>
                <a
                  href="/detailMotif/<%= item.id_motif %>"
                  class="btn btn-sm btn-custom rounded-pill px-3"
                >
                  Selengkapnya
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>

      <% }) %> <% } else { %>
      <div class="alert alert-warning text-center shadow-sm">
        ‚ö†Ô∏è Data artikel tidak ditemukan.
      </div>
      <% } %>
    </div>

    <!-- Footer -->
    <footer class="bg-custom-navbar text-white text-center py-3">
      <p class="mb-0 fw-semibold">&copy; 2025 Tenun Lombok Timur</p>
    </footer>

    <!-- Data JSON -->
    <script id="data-json" type="application/json">
      <%- JSON.stringify(data) %>
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
