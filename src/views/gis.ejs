<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <title>Tenun Lombok Timur</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="theme-color" content="#0d0072" />
    <link rel="manifest" href="/web.webmanifest" />
    <script src="/js/register.js"></script>
    <link rel="icon" href="/img/pavicon.png" />

    <!-- Bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <!-- Leaflet CSS -->
    <link
      rel="stylesheet"
      href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
    />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/gis.css" />

    <style></style>
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-md navbar-dark bg-custom-navbar">
      <div class="container">
        <a class="navbar-brand fw-bold" href="#">TENUN LOMBOK TIMUR</a>

        <div
          class="collapse navbar-collapse justify-content-end"
          id="navbarNav"
        >
          <ul class="navbar-nav align-items-center">
            <li class="nav-item">
              <a class="nav-link text-white" href="/">HOME</a>
            </li>
            <li class="nav-item">
              <a href="/gis" class="nav-link text-white active">LOKASI</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="/motif">MOTIF</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="map-title text-center fw-bold text-uppercase mt-5 pt-5">
      <h2>ðŸ‘˜ Peta Lokasi Toko Tenun</h2>
    </div>

    <!-- Map -->
    <div id="map" class="map"></div>

    <!-- Section Daftar Gendang -->
    <div class="container my-5">
      <h2 class="text-center">CARI LOKASI TENUN</h2>
      <div class="row mt-4">
        <% if (data && data.length > 0) { %> <% data.forEach(item => { %>
        <div class="col-md-4 mb-4">
          <div class="card shadow-sm rounded-3 h-100">
            <img
              src="http://localhost:3000/uploads/<%= item.gambar.replace(/^(\/)?uploads\//, '') %>"
              onerror="this.src='https://placehold.co/350x150?text=No+Image'"
              class="card-img-top"
              alt="gambar <%= item.nama_toko %>"
            />
            <div class="card-body text-center bg-light">
              <h5 class="card-title fw-bold"><%= item.nama_toko %></h5>
              <p class="card-text"><%= item.alamat %></p>
              <a
                href="/detail/<%= item.id_pengerajin %>"
                class="btn bg-custom-navbar text-white rounded-pill"
                >selengkapnya</a
              >
            </div>
          </div>
        </div>
        <% }) %> <% } else { %>
        <p class="text-center">Data tidak ditemukan.</p>
        <% } %>
      </div>
    </div>

    <!-- Simpan data JSON ke browser -->
    <script id="data-json" type="application/json">
      <%- JSON.stringify(data) %>
    </script>

    <!-- Leaflet JS -->
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script>
      const rawData = document.getElementById("data-json").textContent;
      const data = JSON.parse(rawData);

      const map = L.map("map").setView([-8.5136, 116.5325], 11); // Lombok view

      L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png", {
        attribution: "&copy; OpenStreetMap contributors",
      }).addTo(map);

      data.forEach((item) => {
        L.marker([item.latitude, item.longitude]).addTo(map).bindPopup(`
            <div>
              <img src="http://localhost:3000/uploads/${item.gambar.replace(
                /^\/?uploads\//,
                ""
              )}"
                   onerror="this.src='https://placehold.co/200x150?text=No+Image'"
                   alt="gambar ${item.nama_toko}" />
              <h6 class="mt-2">${item.nama_toko}</h6>
              <p class="mb-2 small">${item.alamat}</p>
              <a href="/detail/${
                item.id_pengerajin
              }" class="btn btn-sm btn-warning rounded-pill">Lihat Detail</a>
            </div>
          `);
      });
    </script>

    <!-- Footer -->
    <footer class="bg-custom-navbar text-white text-center py-3">
      <p class="mb-0 fw-semibold">&copy; 2025 Tenun Lombok Lombok</p>
    </footer>

    <!-- Bootstrap JS -->
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    ></script>
  </body>
</html>
